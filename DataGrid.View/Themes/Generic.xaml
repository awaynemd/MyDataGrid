<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DataGrid.View">

    <Style TargetType="{x:Type local:AppointmentListView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AppointmentListView}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Must explicitly specify a style for anything to show up on the screen -->
    <Style TargetType="{x:Type local:AppointmentDataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}"/>


</ResourceDictionary>
